

    <div class="login-container">
        <h2>Login</h2>
        <form id="login-form" action="javascript:void(0);">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <button type="button" class="login-button" onclick="requestOTP()">Request OTP</button>
        </form>
        <form id="otp-form" action="/login" method="post" style="display: none;">
            <div class="form-group">
                <label for="otp">Enter OTP</label>
                <input type="text" id="otp" name="otp" required>
            </div>
            <button type="submit" class="login-button">Login</button>
        </form>
        <form id="first-form" action="/update" method="post" style="display: none;">
            <div class="form-group">
                <label for="otp">Enter Name</label>
                <input type="text" id="otp" name="otp" required>
            </div>
            <button type="submit" class="login-button">Login</button>
        </form>
    </div>

    <script>
        function requestOTP() {
            const email = document.getElementById('email').value;

            fetch('/api/request-otp', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email: email })
            })
            .then(response => {
                if (response.ok) {
                    document.getElementById('login-form').style.display = 'none';
                    document.getElementById('otp-form').style.display = 'block';
                } else {
                    alert('Email not found.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
    </script>


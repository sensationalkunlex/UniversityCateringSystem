    <div class="container">
        <h2 class="text-center my-4">Our Menu</h2>
        <!-- Bootstrap Carousel -->
    </div>
    <div class="container p-4">
        <section class="row">

            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-3" id="clickAdd" onclick="addToCart(@product.Id)" data-id="@product.Id">
                    <div class="card">
                        <img src="@product.imageUrl" class="card-img-top" alt="Product Image" style="height: 400px;object-fit: cover;object-position: center;">
                        <div class="card-body text-center">
                          
                            <p class="card-text my-3 text-danger bold"> @string.Format(System.Globalization.CultureInfo.GetCultureInfo("en-GB"), "{0:C}", @product.Price)</p>
                              <h4 class="card-title">@product.Name</h4>
                            <p class="card-text my-3">
                                @product.Description
                            </p>

                            

                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
   
</div>


<script>
    window.addEventListener("load", (event) => {
        GetCartUpdate();
    })
    function GetCartUpdate(){
      
        $.ajax({
            type: "Get",
            url: "/Home/GetCart",
            contentType: "application/json; charset=utf-8",
            success: function (result, status, xhr) {
                document.getElementById("cartCount").innerHTML = result.length;
            },
            error: function (xhr, status, error) {
                $("#dataDiv").html("Result: " + status + " " + error + " " + xhr.status + " " + xhr.statusText)
            }
        });
  
    }
    
